@section Scripts{
    @Scripts.Render("~/Scripts/Skripta.js")
}

@*REGISTRACIJA,PRIJAVA I ODJAVA*@
<div class="row">

    <div class="col-sm-4 col-sm-push-4">
        <form method="post" action="post/" class="form-horizontal" id="registracija">
            <h3 class="text-center">Registracija</h3>

            <div class="form-group">
                <label class="col-sm-4">Email</label>
                <div class="col-sm-8">
                    <input class="form-control" type="text" id="regEmail" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4">Lozinka</label>
                <div class="col-sm-8">
                    <input class="form-control" type="password" id="regLoz" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4">Ponovi Lozinku</label>
                <div class="col-sm-8">
                    <input class="form-control" type="password" id="regLoz2" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-8">
                    <button type="submit" class="btn btn-default">Registracija</button>
                </div>
            </div>
        </form>
    </div>

    <div class="clearfix"></div>
    <div class="col-sm-4 col-sm-push-4">
        <form method="post" class="form-horizontal" action="post/" id="prijava">
            <h3 class="text-center">Prijava</h3>
            <div class="form-group">
                <label class="col-sm-4">Email</label>
                <div class="col-sm-8">
                    <input class="form-control" type="text" id="priEmail" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4">Lozinka</label>
                <div class="col-sm-8">
                    <input class="form-control" type="password" id="priLoz" />
                </div>
            </div>
            <div class="form-group pull-left">
                <button type="submit" class="btn btn-default">Prijava</button>
            </div>
            <div class="form-group pull-right">
                <button type="button" id="prikaziRegistraciju" class="btn btn-primary">Registracija</button>
            </div>
        </form>
    </div>
</div>

<br />

@*ODJAVA*@
<div class="row">
    <div class="col-sm-12" id="odjava">
        <span id="info" class="pull-left"></span>
        <button class="btn btn-default pull-right" id="odjavise">Odjava</button>
    </div>
</div>


@*PODACI*@


<div class="row">
    <div class="col-sm-4 col-sm-push-4">
        <div id="data"></div>
    </div>
</div>

<div class="clearfix"></div>



<div class="row">
    <div class="col-sm-4 col-sm-push-4">
        <form method="post" class="form-horizontal" action="post/" id="dodavanje">
            <h3 class="text-center">Dodavanje novog proizvoda</h3>
            <div class="form-group">
                <label class="col-sm-4">Naziv</label>
                <div class="col-sm-8">
                    <input class="form-control" type="text" id="nazivProizvoda" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4">Cena</label>
                <div class="col-sm-8">
                    <input class="form-control" type="number" id="cenaProizvoda" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4">Kategorija</label>
                <div class="col-sm-8">
                    <select class="form-control" id="kategorijaDropdown"></select>
                </div>
            </div>
            <div class="form-group pull-left">
                <button type="submit" class="btn btn-default">Dodavanje</button>
            </div>
            <div class="form-group pull-right">
                <button type="button" id="odustajanje" class="btn btn-primary">Odustajanje</button>
            </div>
        </form>
    </div>

</div>

<div class="clearfix"></div>

@*KATEGORIJE*@
<div class="row">
    <div class="col-sm-4 col-sm-push-4">
        <div id="dataKategorije"></div>
    </div>
</div>

<div class="clearfix"></div>



<div class="row">
    <div class="col-sm-4 col-sm-push-4">
        <form method="post" class="form-horizontal" action="post/" id="dodavanjeK">
            <h3 class="text-center">Dodavanje nove kategorije</h3>
            <div class="form-group">
                <label class="col-sm-4">Naziv</label>
                <div class="col-sm-8">
                    <input class="form-control" type="text" id="nazivKategorije" />
                </div>
            </div>
            <div class="form-group pull-left">
                <button type="submit" class="btn btn-default">Dodavanje</button>
            </div>
            <div class="form-group pull-right">
                <button type="button" id="odustajanjeK" class="btn btn-primary">Odustajanje</button>
            </div>
        </form>
    </div>

</div>

<br />
<button class="btn btn-warning center-block" id="prikaziStatistika">Statistika</button>
<div class="row">
    <div class="col-sm-4 col-sm-push-4">
        <div id="dataStatistika"></div>
    </div>
</div>

<div class="row">
    <div class="col-sm-4 col-sm-push-4">
        <div id="dataNajmanji"></div>
    </div>
</div>

